<view class='normalModel'>
  <block wx:for="{{star}}" wx:for-index="index">
    <image src="{{item.img}}" class='normal_star' bindtap='getStar' data-index="{{index}}"></image>
  </block>
  <span class="normalText">{{mark}}</span>
</view>
<view>
  <textarea placeholder="影评" class="normalTextA" placeholder-style="font-size:28rpx; color:#ccc;" maxlength="-1" bindblur="getTextArea" value="{{content}}"></textarea>
  <button type='primary' class='normalSub' bindtap='subFun'>提交</button>
</view>